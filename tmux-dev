#!/bin/sh

session="dev"
icon_gpu_dir=/home/remo/mch/model/icon/icon_gpu
icon_cpu_dir=/home/remo/mch/model/icon/icon_cpu
exp_dir=/home/remo/mch/model/icon/experiments/ch-lr

tmux start-server
tmux new-session -d -s $session -n dev

tmux selectp -t 0
tmux send-keys "cd $icon_gpu_dir" C-m
tmux split-window -v -c $icon_gpu_dir
tmux send-keys "load-icon-pgi" C-m
tmux selectp -t 1
tmux split-window -h -c $icon_cpu_dir
tmux send-keys "load-icon-pgi" C-m

tmux new-window -t $session:1 -n exe
tmux selectp -t 0
tmux send-keys "cd $exp_dir" C-m
tmux split-window -v -c "$exp_dir/output/ser_data"
tmux selectp -t 0
tmux split-window -h -c "$exp_dir"

tmux new-window -t $session:2 -n todo
tmux send-keys "vim /home/remo/meteobox/todo/impact_todo.txt" C-m

tmux select-window -t $session:0

tmux attach-session -t $session
